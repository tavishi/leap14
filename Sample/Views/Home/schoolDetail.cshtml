            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-7">
                    <li ng-repeat="school in school_detail">
                        <div class="row" style="background-color:white">

                            <div class="col-md-12">
                                <div class="row" style="text-align: left">
                                    <h2><span class="glyphicon glyphicon-bookmark" style="font-size:40px;"></span> {{school.SchoolName}}</h2>
                                    <h4 style="font-family:'Times New Roman', Times, serif"><span class="glyphicon glyphicon-road" style="font-size:20px;margin-left:10px"></span>{{school.Address}},{{school.DistrictName}}<br />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{state_dictionary[school.StateName]}} - {{school.Pincode}}</h4>
                                </div>
                                <p>
                                    <div class="row" id="first">
                                        <div ng-if="school.FemaleStudentCount>0">
                                            <div class="col-md-2" style="font-family:'Times New Roman', Times, serif">
                                                Total no of female students: {{school.FemaleStudentCount}}
                                            </div>
                                        </div>
                                        <div ng-if="school.MaleStudentCount>0">
                                            <div class="col-md-2">
                                                Total no of male students : {{school.MaleStudentCount}}
                                            </div>
                                        </div>
                                        <div ng-if="school.MaleStudentCount == 0 && school.FemaleStudentCount == 0">
                                            <div class="col-md-2">
                                                Student Enrollment data not available
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            Year of estd : {{school.YearOfEstd}}
                                        </div>
                                        <div class="col-md-2">
                                            Medium of instruction: {{language_dictionary[school.MediumOfInstruction]}}
                                        </div>


                                        <div ng-if="school.LibraryCount != null">
                                            {{library_dictionary[school.LibraryCount]}}
                                            <br />
                                            No of books in library : {{school.BooksCount}}
                                            No of books in library per child : {{Math.round(school.BooksCount/(school.FemaleStudentCount+school.MaleStudentCount))}}

                                        </div>

                                        <div ng-if="school.FemaleToiletCount !=null">
                                            <div ng-if="school.FemaleStudentCount>0">
                                                No of female toilets: {{school.FemaleToiletCount}}
                                                <div ng-if="school.FemaleToiletCount>0">
                                                    No. of female students per toilet  : {{Math.round(school.FemaleStudentCount/school.FemaleToiletCount)}}
                                                </div>
                                            </div>
                                            <div ng-if="school.MaleStudentCount>0">
                                                No of male toilets :{{school.MaleToiletCount}}
                                                <div ng-if="school.MaleToiletCount>0">
                                                    No of male students per toilet :{{Math.round(school.MaleStudentCount/school.MaleToiletCount)}}
                                                </div>
                                            </div>
                                        </div>
                                        <div ng-if="school.MidDayMeal != null">
                                            Mid day meals not provided


                                        </div>
                                        <div ng-if="school.ElectricityConnectionStatus != null">
                                            Status of electricity connection : {{school.ElectricityConnectionStatus }}
                                        </div>
                                        <div ng-if="school.ClassroomCount != null">
                                            Total no. of classrooms for instructional purposes : {{school.ClassroomCount}}
                                            Total no of classrooms that need repair : {{school.ClassroomRepairCount}}
                                            <div ng-if="school.studentclassroomratio >-1">
                                                avg no. of students per classroom
                                                {{school.studentclassroomratio}}


                                            </div>
                                        </div>
                                        <div ng-if="school.ComputerAidedLearning != null">
                                            School provides computer aided learning : {{school.ComputerAidedLearning}}
                                            No of computers : {{school.ComputerCount}}

                                        </div>

                                        <div ng-if="school.RTECurYearStudentCount != null">
                                            No. of students given admission this year under RTE : {{school.RTECurYearStudentCount}}
                                            No. of students given admission prev year under RTE :{{school.RTEPrevYearStudentCount}}
                                        </div>



                                    </div>
                                </p>
                                <a class="btn btn-primary" href="#" ng-click="generate_pledge(school.SchoolCode)">I'd want to contribute <span class="glyphicon glyphicon-chevron-right"></span></a>
                                <div ng-attr-id="{{school.SchoolCode}}">
                                    <br />

                                </div>
                                @*<hr>*@
                            </div>
                        </div>
                        <br /><br />
                    </li>






