    <!-- Full Page Image Background Carousel Header -->
    <header id="myCarousel" class="carousel slide" style="height: 750px">
        <!-- Indicators -->
        <!--<ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
            -->
        <!-- Wrapper for Slides -->
        <div class="carousel-inner">
            <div class="item active">
                <!-- Set the first background image using inline CSS below. -->
                <div class="fill" style="background-image:url('https://bnsatnalikafoundation.files.wordpress.com/2014/02/children-ngo-for-education-assam-1.jpg');">
                    <div class="header-text hidden-xs">
                        <div class="col-md-12 text-center">
                            <form role="form" id="district_form" name="district_form" method="post" action="submitform.asp">
                                <div class="col-xs-4"></div>
                                <div class="col-xs-4">
                                    <br>
                                    <h3>
                                        <br /><br /><br /><br /><br /><br /><br /><br />

                                        <span class="padding">

                                            <label style="color:whitesmoke; font-size:240%; font-family:'Bookman Old Style'">Select the state and district:</label>
                                            <br /><br />
                                            &nbsp;&nbsp;<select class="form-control" name="category" id="category" onchange="javascript: dropdownlist(this.options[this.selectedIndex].value);"  ng-model="location.state">
                                            <option selected disabled value="">Select the state</option> 
                                                <option value="AP">Andhra Pradesh</option>
                                                <option>Goa</option>
                                            </select>
                                            <br /><br /><br />
                                            <script type="text/javascript" language="JavaScript">
                                                document.write('<select ng-model="location.district"  class="form-control" name="subcategory"><option>Select district</option></select>')
                                            </script>
                                            <noscript>
                                                <select class="form-control" name="subcategory" id="subcategory">
                                                    <option>Select a district</option>
                                                </select>
                                            </noscript>
                                        </span>
                                        <!--- <input name="test" id="test" ng-model="name.initials"/> -->

                                    </h3>
                                    <br>
                                    <div class="">
                                        {{message}}
                                        <a class="btn btn-primary btn-sm btn-min-block" ng-click="save(location.state,location.district)">Search</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- <div class="carousel-caption">

                     <h2>Caption 1</h2>
                 </div>-->
            </div>
